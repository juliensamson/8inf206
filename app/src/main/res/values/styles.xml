<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/i_primary_800</item>
        <item name="colorPrimaryDark">@color/primary_900</item>
        <item name="colorAccent">@color/i_secondary_700</item>
    </style>


    <!--    Toolbar     -->
    <style name="MainToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/i_primary_800</item>
        <item name="android:textColor">@color/white_50</item>
        <item name="android:textSize">@dimen/toolbar_title</item>
    </style>


    <!--    EditText    -->
    <style name="EditTextStyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black_400</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/i_secondary_700</item>
        <item name="colorControlNormal">@color/primary_300</item>
        <item name="colorControlActivated">@color/i_primary_800</item>
    </style>

    <!--    Button     -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/i_primary_800</item>
    </style>


    <!--
    <style name="UserPopupStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
    </style>
    -->

    <style name="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
    </style>

</resources>
