<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/toolbar_profil_picture"
        android:layout_width="32dp"
        android:layout_height="32dp"
        style="@style/LightToolbarTheme.ImageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="48dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toolbar_profil_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LightToolbarTheme.Title.Name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toolbar_profil_post_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/LightToolbarTheme.Title.Post"/>

        </LinearLayout>

    </LinearLayout>

</merge>