<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp">


            <FrameLayout
                android:id="@+id/button_event_type_on_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/button_event_type_on_shape"
                    android:background="@drawable/button_event_type_on"
                    style="@style/ProfileImage.Normal" />

                <ImageView
                    android:id="@+id/button_event_type_on_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_music_note_white_24dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/button_event_type_off_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/button_event_type_off_shape"
                    android:background="@drawable/button_event_type_off"
                    style="@style/ProfileImage.Normal" />

                <ImageView
                    android:id="@+id/button_event_type_off_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_music_note_primary_24dp"/>

            </FrameLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/button_event_type_title"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            style="@style/TextView.Normal.Bold" />


    </LinearLayout>

</merge>