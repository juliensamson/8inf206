<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_50"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <EditText
            android:id="@+id/dialog_post_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="4dp"
            android:textColor="@color/black_600"
            android:hint="Ã‰crire une publication..."
            android:textColorHint="@color/black_400"
            android:background="@drawable/edit_text_post"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="4" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <ImageButton
                android:id="@+id/dialog_post_picture_camera"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:alpha="0.54"
                android:background="@drawable/button_effect"
                style="?android:attr/borderlessButtonStyle"
                app:srcCompat="@drawable/ic_camera_alt_black_24dp" />

            <ImageButton
                android:id="@+id/dialog_post_picture_gallery"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:alpha="0.54"
                android:background="@drawable/button_effect"
                style="?android:attr/borderlessButtonStyle"
                app:srcCompat="@drawable/ic_image_black_24dp"/>

            <ImageButton
                android:id="@+id/dialog_post_attachment"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:alpha="0.54"
                android:background="@drawable/button_effect"
                style="?android:attr/borderlessButtonStyle"
                app:srcCompat="@drawable/ic_attachment_black_24dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/dialog_post_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:alpha="0.54"
            android:background="@drawable/button_effect"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_send_black_24dp"/>

    </FrameLayout>

</LinearLayout>