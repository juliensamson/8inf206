<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.uqac.lecitoyen.fragments.userUI.ProfilFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_profil_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_profil_collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:collapsedTitleGravity="start"
            app:collapsedTitleTextAppearance="@color/white_50"
            app:expandedTitleGravity="top"
            app:expandedTitleTextAppearance="@color/white_50"
            app:titleEnabled="true"
            app:title="JULIEN SAMSON"
            app:contentScrim="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- ********   Toolbar Open   ******** -->

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/toolbar_profil_collapsing_coord_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/toolbar_profil_collapsing_background"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/i_primary_800"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="64dp"
                        android:orientation="vertical"
                        app:layout_anchor="@id/toolbar_profil_collapsing_picture"
                        android:layout_gravity="start|bottom">

                        <TextView
                            android:id="@+id/toolbar_profil_collapsing_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Julien samson"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_600"/>

                        <TextView
                            android:id="@+id/toolbar_profil_collapsing_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="jul_samson"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="@color/black_500"/>

                        <TextView
                            android:id="@+id/toolbar_profil_collapsing_biography"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Biography..."
                            android:textSize="14sp"
                            android:textColor="@color/black_500"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/toolbar_profil_collapsing_followers_count"
                                style="@style/TextView.Number"/>

                            <TextView
                                android:text="@string/textview_followers"
                                style="@style/TextView.Static"/>

                            <TextView
                                android:id="@+id/toolbar_profil_collapsing_following_count"
                                style="@style/TextView.Number"/>

                            <TextView
                                android:text="@string/textview_following"
                                style="@style/TextView.Static"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/toolbar_profil_collapsing_picture"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:elevation="5dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    app:layout_anchor="@id/toolbar_profil_collapsing_background"
                    app:layout_anchorGravity="start|bottom"
                    android:src="@mipmap/ic_launcher_round" />

                <ImageView
                    android:id="@+id/toolbar_profil_collapsing_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:padding="8dp"
                    android:background="@drawable/button_profil"
                    app:srcCompat="@drawable/ic_edit_white_24dp"
                    android:textColor="@color/white_50"
                    app:layout_anchor="@id/toolbar_profil_collapsing_background"
                    app:layout_anchorGravity="bottom|end" />

            </android.support.design.widget.CoordinatorLayout>

            <!-- ********   Toolbar Collpased   ******** -->

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_profil"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:minHeight="?attr/actionBarSize"
                app:contentScrim="?attr/colorPrimary"
                android:gravity="top"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                app:titleMarginTop="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/toolbar_profil_picture"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_launcher_round"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="48dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/toolbar_profil_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:text="JULIEN SAMSON"
                        android:textStyle="bold"
                        android:textColor="@color/i_primary_800"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/toolbar_profil_post_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:text="10"
                            android:textColor="@color/i_primary_800"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="publications"
                            android:textColor="@color/i_primary_800"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="?attr/actionBarSize"
                app:tabTextColor="@color/black_700"
                app:tabSelectedTextColor="@color/i_primary_800"
                app:tabIndicatorColor="@color/i_primary_800"
                app:tabMode="fixed">

                <android.support.design.widget.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publications" />

                <android.support.design.widget.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upvote"/>

            </android.support.design.widget.TabLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/profil_nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/profil_publication_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>